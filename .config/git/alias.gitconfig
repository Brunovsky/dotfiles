# man git-log /'PRETTY FORMATS'
# %h %G? %ar %an %s %d

# building blocks:
# hash:     %C(blue)%h%Creset
# author:   %C(green)%an%Creset
# subject:  %s
# date:     %C(cyan)(%ar)%Creset
# gpg:      %C(auto,magenta)% G?%Creset
# refs:     %C(auto)%d%Creset             same on the left
[pretty]
    # date author subject
    das = %C(blue)%h%Creset%C(auto,magenta)% G?%Creset %C(cyan)%>(12,trunc)%ar%Creset %C(green)%an%Creset %s%C(auto)%d%Creset
    # subject date author
    sda = %C(blue)%h%Creset%C(auto,magenta)% G?%Creset %s %C(cyan)(%ar)%Creset %C(green)%an%Creset%C(auto)%d%Creset
    # date subject author
    dsa = %C(blue)%h%Creset%C(auto,magenta)% G?%Creset %C(cyan)%>(12,trunc)%ar%Creset %s - %C(green)%an%Creset%C(auto)%d%Creset


[alias]
    # ===== ===== ===== ===== ===== =====
    a   = add
    ai  = add -i
    au  = add -u
    br  = branch
    cm  = commit
    cl  = clone --recursive
    d   = diff
    dc  = diff --cached
    dh  = diff HEAD
    dt  = difftool
    dct = difftool --cached
    f   = fetch
    fa  = fetch --all
    fp  = format-patch
    g   = grep -p
    l   = log --pretty=dsa
    lg  = log --pretty=dsa --graph
    ll  = log --pretty=medium --date=human
    llg = log --pretty=medium --date=human --graph
    ls  = ls-files
    m   = merge
    ma  = merge --abort
    mc  = merge --continue
    ms  = merge --skip
    mq  = merge --quit
    ps  = push
    pl  = pull --recurse-submodules
    pla = pull --recurse-submodules --all
    rb  = rebase
    rbi = rebase --interactive
    rba = rebase --abort
    rbc = rebase --continue
    rbs = rebase --skip
    re  = reset
    reh = reset --hard
    rem = reset --mixed
    res = reset --soft
    rs  = restore
    rmt = remote
    st  = status
    sm  = submodule
    sw  = switch
    # ===== ===== ===== ===== ===== =====

    # view info, verbose version
    tags = tag -l
    branches = branch -avv
    remotes = remote -v

    # view other info
    aliases = config --get-regexp alias
    contributors = shortlog --summary --numbered
    whoami = config user.email

    # view last commit
    last = log -1 HEAD --stat --compact-summary

    # remove from staging area, i.e. unstage something
    unstage = reset HEAD --
    unadd = unstage

    # amend the HEAD commit
    amend = commit --amend
    ammend = amend
    overwrite = amend --reuse-message=HEAD
    ovw = overwrite

    # sign the last commit with the default key
    resign = ovw -S

    # diff check changes
    checkpending = diff --check HEAD
    pending = diff HEAD
    check = diff --check --cached
    changes = diff --cached
