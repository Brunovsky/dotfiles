{
	// debug
	// =====
	"debug.inlineValues": true,
	"debug.toolBarLocation": "docked",

	// editor
	// ======
	"editor.codeLens": true,
	"editor.lightbulb.enabled": true,
	"editor.parameterHints.cycle": false,
	"editor.parameterHints.enabled": true,
	"editor.minimap.enabled": false,
	// suggestions
	"editor.acceptSuggestionOnEnter": "off",
	"editor.tabCompletion": "on",
	"editor.suggestSelection": "first",
	"editor.wordBasedSuggestions": false,
	"editor.suggest.localityBonus": true,
	"editor.suggest.maxVisibleSuggestions": 5,
	// cursor mouse scroll
	"editor.cursorBlinking": "phase",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorStyle": "line-thin",
	"editor.dragAndDrop": false,
	"editor.hover.delay": 150,
	"editor.scrollBeyondLastColumn": 2,
	// fonts
	"editor.colorDecorators": true,
	"editor.fontSize": 13,
	"editor.fontLigatures": true,
	"editor.fontFamily": "'Fira Code', 'Hack', 'Droid Sans Mono', monospace",
	// formatting folding
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.lineNumbers": "off", // toggled by settings cycler
	"editor.wordWrap": "on",
	"editor.rulers": [80],
	"editor.autoIndent": "full",
	"editor.foldingStrategy": "auto",
	"editor.showFoldingControls": "mouseover",
	"editor.folding": true,
	// rendering
	"editor.roundedSelection": true,
	"editor.find.addExtraSpaceOnTop": false,
	"editor.renderIndentGuides": false,
	"editor.renderFinalNewline": true,
	"editor.renderLineHighlight": "none",
	"editor.renderWhitespace": "selection",

	// diffEditor
	// ==========
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.renderIndicators": false,
	"diffEditor.renderSideBySide": true,

	// explorer
	// ========
	"explorer.autoReveal": false,
	"explorer.confirmDragAndDrop": false,

	// files
	// =====
	"files.enableTrash": false,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"files.defaultLanguage": "shellscript",

	// window
	// ======
	"window.closeWhenEmpty": false,
	"window.menuBarVisibility": "toggle",
	"window.openFilesInNewWindow": "off",
	"window.title": "${rootName} - ${appName}",
	"window.titleBarStyle": "native",
	"window.zoomLevel": 0,

	// workbench
	// =========
	"breadcrumbs.enabled": false,
	"workbench.settings.editor": "json",
	// theme
	"workbench.colorTheme": "Nord",
	"workbench.tips.enabled": false,
	// layout
	"workbench.startupEditor": "none",
	"workbench.activityBar.visible": false,
	"workbench.statusBar.visible": true,
	"workbench.enableExperiments": true,
	"workbench.sideBar.location": "right",
	"workbench.panel.defaultLocation": "bottom",
	"workbench.commandPalette.preserveInput": false,
	// editor
	"workbench.editor.closeEmptyGroups": true,
	"workbench.editor.openSideBySideDirection": "down",
	"workbench.editor.enablePreview": false,
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"workbench.editor.showTabs": true,
	"workbench.editor.labelFormat": "default",
	"workbench.editor.tabCloseButton": "off",
	// list
	"workbench.list.automaticKeyboardNavigation": true,
	"workbench.list.horizontalScrolling": false,
	"workbench.list.keyboardNavigation": "filter",
	"workbench.list.multiSelectModifier": "ctrlCmd",
	"workbench.list.openMode": "doubleClick",

	// terminal
	// ========
	"terminal.explorerKind": "external",
	"terminal.external.linuxExec": "konsole",

	// C and C++
	// =========
	"C_Cpp.autoAddFileAssociations": false,
	"C_Cpp.clang_format_style": "file",
	"C_Cpp.clang_format_fallbackStyle": "none",
	"C_Cpp.default.cppStandard": "c++17",
	"C_Cpp.default.cStandard": "c11",
	"C_Cpp.intelliSenseCacheSize": 1000, // 1GB max cache size
	"C_Cpp.workspaceParsingPriority": "low", // 25% cpu usage

	// java
	// ====
	"java.autobuild.enabled": true,
	"java.errors.incompleteClasspath.severity": "ignore",
	"java.format.enabled": false, // clang-format instead
	"java.completion.guessMethodArguments": true,
	"[java]": {
		"editor.defaultFormatter": "xaver.clang-format"
	},

	// javascript
	// ==========
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	// html
	// ====
	"html.format.preserveNewLines": false,

	// clang-format
	// ============
	"clang-format.fallbackStyle": "none",
	"clang-format.language.javascript.enable": false,
	"clang-format.language.typescript.enable": false,

	// gitlens
	// =======
	"gitlens.defaultDateFormat": "YYYY-MM-DD HH:MM:ss",
	"gitlens.defaultDateShortFormat": "YYYY-MM-DD",

	// prettier
	// ========
	"prettier.trailingComma": "none",
	"prettier.htmlWhitespaceSensitivity": "ignore",
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	// settings sync
	// =============
	"sync.gist": "aa7f9059d7e71792c6c75f5a4a42e000",
	"sync.quietSync": false,

	// settings cycle
	// ==============
	"settings.cycle": [
		{
			"id": "lineNumbers",
			"values": [
				{
					"editor.lineNumbers": "off"
				},
				{
					"editor.lineNumbers": "relative"
				},
				{
					"editor.lineNumbers": "on"
				}
			]
		}
	],

	// associations
	// ============
	"files.associations": {
		"**/git/config": "gitconfig",
		"**/git/attributes": "gitconfig",
		"**/git/submodules": "gitconfig",
		"**/git/ignore": "gitignore",
		"**/.*rc": "shellscript",
		"**/.aliases": "shellscript",
		"**/fonts.conf": "xml"
	}
}
